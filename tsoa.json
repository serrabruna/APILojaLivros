{
    "entryFile": "src/app.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": [
        "src/controller/**/*.ts"
    ],
    "spec": {
        "outputDirectory": "src",
        "specVersion": 3,
        "spec": {
            "info": {
                "title": "API Livraria",
                "version": "1.0.0",
                "description": "API completa para gerenciamento de livraria com usuários, livros, pedidos e carrinho de compras"
            },
            "servers": [
                {
                    "url": "https://apilojalivros-production.up.railway.app",
                    "description": "Servidor em produção (Railway)"
                },
                {
                    "url": "http://localhost:8080",
                    "description": "Servidor local"
                }
            ],
            "schemes": ["https", "http"]
        }
    },
    "routes": {
        "routesDir": "src/route"
    }
}